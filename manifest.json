{
  "manifest_version": 2,
  "name": "Eden | Multi > Chamados",
  "version": "1.1",
  "description": "Extensão desenvolvida para lançar chamados diretamente da multi ao eden",
  "developer": {
    "name": "Luiz Marroni",
    "url": "https://github.com/rownaas"
  },
  "permissions": [
    "activeTab",
    "storage",
    "downloads"
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Clique para interagir"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "*://painel.multi360.com.br/*"
      ],
      "js": [
        "content.js",
        "popup.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  }
}
